<div class="container">
  <div class="custom-container">
    <div class="small_container" id='scooter-container' style="width:40%;">
      <div class="card">
        <img src="https://ik.imagekit.io/hj8sm3kk7/large/gallery/exterior/73/985/honda-scoopy-esp-left-side-view-full-image-128865.jpg" class="card-img-top" alt="">
        <div class="card-body">
          <div class="card-text"><p>Model:
                <%= @scooter.model.brand %> <%= @scooter.model.name %></p>
              <p>Age:
                <%= @scooter.age %> years old</p>
              <p>Mileage:
                <%= number_with_delimiter(@scooter.mileage.to_i, delimiter: ',') %> kms</p>
              <p>Condition:
                <%= @scooter.condition %></p>
             <p> Daily Rental: IDR<span hidden id="price" ><%= @scooter.price_per_day.to_i%></span>
               <%= number_with_delimiter(@scooter.price_per_day.to_i, delimiter: ',') %></p>
            </div>
        </div>
      </div>
    </div>
    <div class="small-container" id='booking-container' style="width:40%; padding: 50px">
      <div id='scooter-booking-dates' data-unavailable="<%= @scooter.unavailable_dates.to_json %>">
        <% if current_user.id != @scooter.user_id  %>
        <%= simple_form_for([@scooter, @booking]) do |f| %>
        <%= f.label :start_date, 'Choose your Date', class: "text-center" %>
        <%= f.input :start_date, as: :string, type: :text , label: false%>
        <%= f.submit "Book", class: "btn btn-primary btn-lg btn-block btn-booking" %>
        <% end %>
        <% end %>
      </div>
      <div style="font-size:14px; padding:10px" id="booking-details">
       <p></p>
      </div>
    </div>
  </div>
</div>




<div class="container">
  <h3>Reviews:</h3>
    <% @reviews.each do |review| %>
<div class="card">
  <div class="card-body" p-3>
    <%= review.content %>
    By: <%= review.user.email  %>
    Rating: <% review.rating.times do %>
    <i class='fas fa-star'></i>
    <% end %>
  </div>
</div>
    <% end %>
  </div>
</div>
  </div>


