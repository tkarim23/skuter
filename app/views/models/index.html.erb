<div class="card-category mb-5 rounded-0" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://images.unsplash.com/photo-1551368321-dddf8a05c459?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1350&q=80)">
  <h1 class="my-5 text-center">Have your next adventure with <strong>SKUTER</strong></h1>
</div>
<div class="container">
  <div class="homepage-search bar">
    <h5>Where will it take you?</h5>
    <div class="search-form">
      <form action="/models" method="get">
        <input class="form-control string required" type="text" name="query" id="location" placeholder="city" />
        <button name="button" type="submit" class="btn btn-flat"><i class="fas fa-search"></i></button>
    </div>
  </div>
  <% if @query %>
    <p>You searched for <strong>
        <%= @query %></strong>. We found
      <%= @models.count %> motorbike models out of our
      <%= Model.count %> on our website.</p>
    <% else %>
    <h2>All
      <%= Model.count %> motorbike types.
    </h2>
    <% end %>
  <div class="cards">
    <% @models.each do |model| %>
    <%= link_to model_path(model) do %>
    <div class="card-category shadow p-3 mb-5 bg-white rounded" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= model.photo_url %>)">
      <%= model.brand %> -
      <%= model.name %>
    </div>
    <% end %>
    <% end %>
  </div>
</div>
