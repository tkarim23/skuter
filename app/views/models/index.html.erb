<div class="container">
    <h1 class="my-5 text-center">Have your next adventure with a <strong>SKUTER</h1>

    <div class="bg-black">
    <h5>Where will it take you?</h5>
<%= simple_form_for :search, url: root_path, method: :get do |f| %>
  <div class="search-form">
    <input class="form-control string required" type="text" name="search[query]" id="location" placeholder="city" />
    <input type="date" id='booking_start_date' name="search[date]" class="form-control string required">
    <button name="button" type="submit" class="btn btn-flat">
      <i class="fas fa-search"></i> Search
    </button>
  </div>
<% end %>
</div>


<div class="cards">
<% @models.each do |model| %>
<%= link_to model_path(model) do %>
  <div class="card-category shadow p-3 mb-5 bg-white rounded" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= model.photo_url %>)">
    <%= model.brand %> - <%=model.name%>
  </div>
<% end  %>
<% end %>


</div>
</div>
